    
<%= provide(:title, @user.username)%>

<h1><%= @user.username %></h1>
<%= link_to 'Create an event', new_event_path %>
<% if @events.any?%>
    <h2><%= @user.username %>'s events:</h2>
    <ol class='events'>
        <%= will_paginate @events %>
        <%= render @events %>
        <%= will_paginate @events %>
    </ol>
<% end%>
<% if @prev_events.any?%>
    <h2><%= @user.username %> has attended:</h2>
    <ol class='events'>
        <%= will_paginate @prev_events %>
        <%= render @prev_events%>
        <%= will_paginate @prev_events %>
    </ol>
<% end%>
<% if @upcoming.any?%>
    <h2><%= @user.username%> is attending:</h2>
    <ol class='events'>
        <%= will_paginate @upcoming %>
        <%= render @upcoming%>
        <%= will_paginate @upcoming %>
    </ol>
<% end %>


